{
  "name": "publish-demo",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "scripts": {
    "ci": "yarn install --immutable --immutable-cache",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "nuke": "turbo run nuke",
    "create:pkg": "turbo gen workspace --name",
    "publish-packages": "lerna publish from-package --yes",
    "add:packages": "lerna add packages/*"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "@types/node": "^16.0.0",
    "eslint": "^7.32.0",
    "lerna": "^6.6.2",
    "prettier": "^2.5.1",
    "release-please": "^15.10.4",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "turbo": "^1.9.7",
    "typescript": "^5.0.0",
    "vitest": "^0.31.1"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ]
}
